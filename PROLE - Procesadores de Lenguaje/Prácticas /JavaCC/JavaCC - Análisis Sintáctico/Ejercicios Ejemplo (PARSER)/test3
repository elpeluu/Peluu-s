options
{
  DEBUG_PARSER=true;
}


PARSER_BEGIN(exprRead)

public class exprRead{

  public static void main(String args[]) throws ParseException {
    exprRead parser = new exprRead(System.in);
    parser.Read();
  }

}

PARSER_END(exprRead)

// ignorar espacios 
SKIP : 
{
  " " | "\t" | "\n" | "\r"
}

TOKEN :
{
  < NUM: ( ["0"-"9"] )+ >
}

// Comienzo del an치lisis sint치ctico y ejecuci칩n de acciones sem치nticas 
void Read() :
{ }
{
  Expression() ";"
  <EOF>
}

void Expression() :
{ }
{
  Term() ExpresionP()
}

void ExpresionP() :
{ }
{
  (  "+" Term() ExpresionP() 
   | "-" Term() ExpresionP() 
  ) ?
}

void Term() :
{ }
{
  Factor() TermpP()
}

void TermpP() :
{ }
{
  ( "*" Factor() TermpP() ) ?
}


void Factor() :
{ }
{
  <NUM>
|
  "(" Expression() ")"
}
